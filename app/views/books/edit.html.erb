<div class="container">
  <div class="row">
    <%= render 'users/error', book: @book %>
    <div class= "user-info col-sm-3">
      <%#= render 'users/list', user: @book.user, books: @book_new %>

      <h1>User info</h1>
      <h4>プロフィール画像</h4>
      <%= attachment_image_tag current_user, :profile_image, size: "100x100", fallback: "no_image.jpg"  %>
      <h4>name</h4>
      <p><%= current_user.name %></p>
      <h4>introduction</h4>
      <p><%= current_user.introduction %></p>
      <li class="social">
        <%= link_to edit_user_path(current_user.id) do %>
          <i class="fas fa-user-edit"></i>
        <% end %>
      </li>
    </div>

    <div class="col-sm-9">
      <h1>編集画面</h1>
      <%= form_for(@book) do |f| %>
        <h4>本文</h4>
        <%= f.text_field :title %>
        <h4>introduction</h4>
        <%= f.text_area :body %>
        <%= f.submit '保存' %>
      <% end %>
    </div>

  </div>
</div>