<div class="container">
  <div class="row">
    <%= render 'users/error', book: @user %>
    <div class="col-sm-9">

    <h1>編集画面</h1>
      <%= form_for(@user) do |f| %>
        <h4>名前</h4>
        <%= f.text_field :name %>

        <h4>introduction</h4>
        <%= f.text_area :introduction %>

      	<h4>プロフィール画像</h4>
      	<%= f.attachment_field :profile_image %>

      	<%= f.submit '保存' %>

      <% end %>
    </div>
  </div>
</div>