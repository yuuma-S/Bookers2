


<div class="container">
    <div class="row">
		<div class="col-md-3">
			<h1>User info</h1>
			<h4>プロフィール画像</h4>
			<table class="table">
			<tr><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"  %></tr>
				<tr>
					<th>name</th>
					<td><%= user.name %></td>
				</tr>
				<tr>
					<th>introduction</th>
					<td><%= user.introduction %></td>
				</tr>
				<tr>
					<th>フォロー数</th>
					<td><%= user.followings.count %></td>
				</tr>
			</table>

			<% if user.id == current_user.id %>
				<li class="social">
					<%= link_to edit_user_path(user.id) do %>
						<i class="fas fa-user-edit"></i>
				  <% end %>
				</li>
			<% else %>
				<li class="social">
				　<%= link_to user_path(current_user.id) do %>
					　<i class="fas fa-user-edit"></i>
				　<% end %>
				</li>
			<% end %>

				<!-- 現在ログインしているユーザーかどうか
					edit_pathに飛ぶ
				ちがう
					showにとぶ -->

			<%= form_for(books) do |f| %>
				<h2>new book</h2>
				<h4>タイトル</h4>
				<%= f.text_field :title %>
				<h4>本文</h4>
				<%= f.text_area :body %>
				<%= f.submit '保存' %>
			<% end %>
	    </div>
    </div>
</div>
