<%= render 'users/error', book: @book %>
<div class="container">
	<div class="row">
		<main class= "box clearfix">
		<div class= "user-info col-sm-3">
		<%= render 'users/list', user: current_user, books: @book %>
		</div>


		<h2>Userqqqq</h2>
			<div class="col-sm-9">

				<table class="table float-lg-right">
					<thead>

				  		<tr>
						    <th>image</th>
						    <th>name</th>
						    <th></th>
						    <th></th>
						</tr>
					</thead>
					<tbody>
					<% @users.each do |user| %>
					    <tr>
					    	 <td><%= attachment_image_tag user, :profile_image, size: "50x50", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
						    <td><%= user.name %></td>
						    <td>
								<% if current_user != user %>
									<% if user.followed_by?(current_user) %>
										<span><%=link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %></span>
									<% else %>
										<span><%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-default" %></span>
									<% end %>
								<% end %>
						    </td>
						    <td><%=link_to "show", user_path(user.id) %></td>
						</tr>
					 <% end %>
					</tbody>
				</table>
			</div>
		</div>
		</main>

	</div>
</div>
 